<% if signed_in? %>
<div class="row">
<% if rand(2) == 1 %>
<div class="span6">
<div class="hero-unit">
<h1>Where I end and you begin...</h1>
</div>
</div>
<% elsif rand(2) == 1 %>
<div class="span6">
<div class="hero-unit">
<h1>In the beginning was the word...</h2>
</div>
</div>
<% else %>
<div class="span6">
<div class="hero-unit">
<h1>Of everything that stands, the end...</h2>
</div>
</div>
<% end %>
</div>

<% else %>

<h2>Sign in</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, :required => false, :autofocus => true %>
    <%= f.input :password, :required => false %>
    <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign in", :class => "btn btn-primary" %>
  </div>
<% end %>
<% end %>
</div>
</div>

