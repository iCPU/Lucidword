<%= simple_form_for(@beginning) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, :input_html => { :class => "span4" } %>
    <%= f.input :original_author, :input_html => { :class => "span4" } %>
    <%= f.input :style_type, :collection => [ "Poetry", "Short Story", "Classic Novel"] %>
    <%= f.input :content, :as => :text, :input_html => { :class => "span6" }  %>


  </div>
   <div class="form-actions">
     <%= f.button :submit, :class => 'btn btn-primary' %>
   </div>
<% end %>

