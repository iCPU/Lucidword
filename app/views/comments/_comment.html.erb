<div class="comment">
  <div class="created_at"><%= comment.created_at.strftime("%B %d, %Y") %> by <%= link_to comment.user.name, user_path(comment.user) %></div>
  <div class="comment-content">
    <%= comment.content %>
  </div>
  <div class="actions">
    <%= link_to "Reply", new_comment_path(:parent_id => comment, :ending_id => comment.ending_id) %> |
    <%= link_to "Destroy", comment, :confirm => "Are you sure?", :method => :delete %>
  </div>
</div>
