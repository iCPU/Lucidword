<%= div_for comment do %>
  <%= gravatar_image_tag( comment.user.email, :alt => comment.user.name, :gravatar => { :size => 64 }, :class => 'avatar' ) %>
<div class="main">
    <%= render "comments/comment_headline", :comment => comment %>
    <div class="comment_content">
      <%= format_comment(comment) %>
      <div class="actions">
        <%= link_to "Reply", new_comment_path(:parent_id => comment, :ending_id => comment.ending_id), :remote => true %>
        <%= link_to "Edit", edit_comment_path(comment), :remote => true %>
        <%= link_to "Delete", comment, :method => :delete, :remote => true %>
      </div>
    </div>
  </div>
  <div class="clear"></div>
<% end %>
