<% if current_user.nil? %>
  <p>First <%= link_to "sign in", login_path(:return_to => request.url) %> to post a comment.</p>
<% else %>
  <%= div_for @comment do %>
    <%= gravatar_image_tag( @comment.user.email, :alt => @comment.user.name, :gravatar => { :size => 64 }) %>
    <div class="main">
      <%= render "comments/comment_headline", :comment => @comment %>
      <div class="comment_content">
        <%= form_for @comment, :remote => true do |f| %>
          <div>
            <%= f.hidden_field :ending_id %>
            <%= f.hidden_field :parent_id %>
          </div>
          <% if @comment.user_id && @comment.user_id != current_user.id %>
            <p><strong>Please follow the <%= link_to "moderator guidelines", moderators_path %>.</strong></p>
          <% end %>
          <div class="field">
            <%= f.text_area :content, :rows => '12', :cols => 65 %>
          </div>
          <div class="actions">
            <%= f.submit(@comment.new_record? ? "Post Comment" : "Update Comment") %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="clear"></div>
  <% end %>
 <% end %>

