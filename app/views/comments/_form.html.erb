<%= simple_form_for(@comment) do |f| %>
  <%= f.error_notification %>
  <%= f.hidden_field :ending_id %>
  <%= f.hidden_field :parent_id %>
  <div class="form-inputs">
    <p>
      <%= f.label :content, "New Message" %><br />
      <%= f.text_area :content, :rows => 8 %>
    </p>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
