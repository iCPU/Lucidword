<% if @comment.parent_id.present? %>
  $("#<%= dom_id(@comment.parent) %>").next(".nested_comments").children("#new_comment").replaceWith("<%= escape_javascript render(@comment) %>");
<% else %>
 $("#comments").append("<%= escape_javascript render(@comment) %>");
 $('#new_comment.comment').reset;
 $('#comment_content').val('');
 $('#comment_content').focus();
<% end %>


