<h1><%= @user.name %>'s Profile</h1>
<p>Name: <%= @user.name %></p>
<p>Email: <%= @user.email if @user.email %></p>
<p>Beginnings: <%= @user.beginnings.count %>
<p>Endings: <%= @user.endings.count %>

<p>
  <h2> Beginnings </h2>
</p>
<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th>Original Author</th>
    <th>Created</th>
    <th>Controls</th>

  </tr>

<% @user.beginnings.each do |beginning| %>
  <tr>
    <td><%= beginning.title %></td>
    <td><%= beginning.original_author %></td>
    <td><%= time_ago_in_words(beginning.created_at) %> ago</td>
    <div class="btn-group">
      <td><button class="btn"><%= link_to 'Show', beginning %></button></td>
      <td><button class="btn"><%= link_to 'Edit', edit_beginning_path(beginning) %></button></td>
      <td><button class="btn"><%= link_to 'Destroy', beginning, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
    </div>
  </tr>
<% end %>
</table>
<br />

<p>
  <h2>Endings </h2>
</p>
<table class="table table-striped">
  <tr>
    <th>What beginning</th>
    <th>Title</th>
    <th>Created</th>
    <th>Controls</th>
  </tr>

<% @user.endings.each do |ending| %>
  <tr>
    <td><%= ending.beginning.title %></td>
    <td><%= ending.title %></td>
    <td><%= time_ago_in_words(ending.created_at) %> ago</td>
    <td><button class="btn"><%= link_to 'Show', ending %></button></td>
    <td><button class="btn"><%= link_to 'Edit', edit_ending_path(ending) %></button></td>
    <td><button class="btn"><%= link_to 'Destroy', ending, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
  </tr>
<% end %>
</table>
<br />


